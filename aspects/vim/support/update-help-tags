#!/bin/sh

set -e

# Update help tags.
cd ~/.vim/pack

PACKS=""
for PACK in $(find . -maxdepth 3 -type d -path '*/opt/*' | cut -f 4 -d /); do
  PACKS="${PACKS}packadd! $PACK | "
done

COMMANDS="packloadall | call pathogen#helptags() | quit"
echo "Running: vim -u NONE -N -c \"${PACKS}${COMMANDS}\""
vim -u NONE -N -c "${PACKS}${COMMANDS}"
