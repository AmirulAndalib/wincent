export PATH

# To make builds work better:
export ANT_OPTS="-Xmx8192m -XX:MaxPermSize=2048m"
export GRADLE_OPTS="$ANT_OPTS"

# Settings originally in: ~/code/portal/bundles/tomcat-9.0.17/bin/setenv.sh

