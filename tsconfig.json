{
    "compilerOptions": {
        "module": "esnext",
        "moduleResolution": "node",
        "noFallthroughCasesInSwitch": true,
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "outDir": "./lib",
        "baseUrl": ".",
        "paths": {
            "fig/*": ["src/*"]
        },
        "strict": true,
        "target": "ES2019"
    },
    "include": ["aspects/**/*.ts", "src/**/*.ts", "variables.ts"]
}
